                android:gravity="center"
                android:padding="4dp"
                android:text="@string/font_bn_3" />

            <TextView
                android:id="@+id/reader_6_font_style_text_4"
                style="@style/ButtonBordered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/font_bn_4" />

            <TextView
                android:id="@+id/reader_6_font_style_text_5"
                style="@style/ButtonBordered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/font_bn_5" />

            <TextView
                android:id="@+id/reader_6_font_style_text_6"
                style="@style/ButtonBordered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/font_bn_6" />

            <TextView
                android:id="@+id/reader_6_font_style_text_7"
                style="@style/ButtonBordered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/font_bn_7" />

            <TextView
                android:id="@+id/reader_6_font_style_text_8"
                style="@style/ButtonBordered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/font_bn_8" />

            <TextView
                android:id="@+id/reader_6_font_style_text_9"
                style="@style/ButtonBordered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="center"
