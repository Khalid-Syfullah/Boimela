                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/font_bn_12" />

            <TextView
                android:id="@+id/reader_6_font_style_text_13"
                style="@style/ButtonBordered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/font_bn_13" />

            <TextView
                android:id="@+id/reader_6_font_style_text_14"
                style="@style/ButtonBordered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/font_bn_14" />

            <TextView
                android:id="@+id/reader_6_font_style_text_15"
                style="@style/ButtonBordered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/font_bn_15" />

        </LinearLayout>

    </HorizontalScrollView>


    <View
        android:id="@+id/reader_6_font_style_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reader_6_font_style_horizontal_scroll_view" />

    <TextView
        android:id="@+id/reader_6_progress_slider_title"
        style="@style/TextViewB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/progress_slider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reader_6_font_style_divider" />

    <LinearLayout
        android:id="@+id/reader_6_progress_slider_linear_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reader_6_progress_slider_title">

        <TextView
            android:id="@+id/reader_6_progress_slider_show_text"
            style="@style/ButtonBorderedSelected"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/show" />

        <TextView
            android:id="@+id/reader_6_progress_slider_hide_text"
            style="@style/ButtonBordered"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/hide" />
    </LinearLayout>

    <View
        android:id="@+id/reader_6_progress_slider_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reader_6_progress_slider_linear_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>