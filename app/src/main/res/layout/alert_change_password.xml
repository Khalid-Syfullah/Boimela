<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/change_pass_alert_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Change Password"
            android:textColor="@color/oboshor"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:fontFamily="@font/open_sans" />

        <TextView
            android:id="@+id/tv_change_pass_alert_label_old_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"

            android:layout_marginTop="16dp"
            android:text="Old Password"
            android:textColor="@color/oboshor"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_pass_alert_header" />

        <EditText
            android:id="@+id/et_change_pass_alert_old_pass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edittext_box"
            android:fontFamily="@font/open_sans"
            android:hint="Enter old Password"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_change_pass_alert_label_old_pass"
            app:layout_constraintTop_toBottomOf="@+id/tv_change_pass_alert_label_old_pass" />


        <TextView
            android:id="@+id/tv_change_pass_alert_label_new_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"

            android:layout_marginTop="16dp"
            android:text="New Password"
            android:textColor="@color/oboshor"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_change_pass_alert_old_pass" />


        <EditText
            android:id="@+id/et_change_pass_alert_new_pass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edittext_box"
            android:fontFamily="@font/open_sans"
            android:hint="Enter new Password"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_change_pass_alert_label_new_pass"
            app:layout_constraintTop_toBottomOf="@+id/tv_change_pass_alert_label_new_pass" />

        <TextView
            android:id="@+id/tv_change_pass_alert_label_retype_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"

            android:layout_marginTop="16dp"
            android:text="Re-type Password"
            android:textColor="@color/oboshor"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_change_pass_alert_new_pass" />


        <EditText
            android:id="@+id/et_change_pass_alert_retype_pass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edittext_box"
            android:fontFamily="@font/open_sans"
            android:hint="Re-type Password"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_change_pass_alert_label_retype_pass"
            app:layout_constraintTop_toBottomOf="@+id/tv_change_pass_alert_label_retype_pass" />

        <ImageView
            android:id="@+id/change_pass_alert_visibility_old_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_visibility"
            app:layout_constraintBottom_toBottomOf="@+id/et_change_pass_alert_old_pass"
            app:layout_constraintEnd_toEndOf="@+id/et_change_pass_alert_old_pass"
            app:layout_constraintTop_toTopOf="@+id/et_change_pass_alert_old_pass" />

        <ImageView
            android:id="@+id/change_pass_alert_visibility_new_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_visibility"
            app:layout_constraintBottom_toBottomOf="@+id/et_change_pass_alert_new_pass"
            app:layout_constraintEnd_toEndOf="@+id/et_change_pass_alert_new_pass"
            app:layout_constraintTop_toTopOf="@+id/et_change_pass_alert_new_pass" />

        <ImageView
            android:id="@+id/change_pass_alert_visibility_retype_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_visibility"
            app:layout_constraintBottom_toBottomOf="@+id/et_change_pass_alert_retype_pass"
            app:layout_constraintEnd_toEndOf="@+id/et_change_pass_alert_retype_pass"
            app:layout_constraintTop_toTopOf="@+id/et_change_pass_alert_retype_pass" />


        <Button
            android:id="@+id/btn_change_pass_alert_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"

            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="Submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/et_change_pass_alert_retype_pass"
            app:layout_constraintStart_toEndOf="@+id/btn_change_pass_alert_cancel"
            app:layout_constraintTop_toBottomOf="@+id/et_change_pass_alert_retype_pass"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btn_change_pass_alert_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"

            android:backgroundTint="@color/white"

            android:text="Cancel"
            android:textColor="@color/oboshor"
            app:layout_constraintBottom_toBottomOf="@+id/btn_change_pass_alert_submit"
            app:layout_constraintEnd_toStartOf="@+id/btn_change_pass_alert_submit"
            app:layout_constraintStart_toStartOf="@+id/et_change_pass_alert_retype_pass"
            app:layout_constraintTop_toTopOf="@+id/btn_change_pass_alert_submit"
            app:strokeColor="@color/oboshor"
            app:strokeWidth="1dp" />

        <ImageView
            android:id="@+id/change_pass_alert_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_pass_alert_header"
            app:srcCompat="@drawable/ic_check_circle" />

        <Button
            android:id="@+id/change_pass_alert_submit_btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:text="@string/yes"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_pass_alert_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>